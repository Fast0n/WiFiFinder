<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:left="20dp"
        android:right="20dp"
        android:bottom="20dp"
        android:top="20dp">
        <shape android:shape="rectangle">
            <solid
                android:color="#fff" />
            <stroke android:color="#fff" android:width="2dp"/>
            <corners
                android:radius="15dp" />
            <padding
                android:left="20dp"
                android:top="20dp"
                android:right="20dp"
                android:bottom="20dp" />
        </shape>
    </item>
</layer-list>